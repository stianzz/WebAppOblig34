        </dt>

        <dd>
            @Html.DisplayFor(model => model.KatNavn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Land)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Land)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Til vareliste", "AlleVarer", "Vare", new { @class = "btn btn-success " })
            
            <input type="submit" value="Slett" class="btn btn-danger" />
            
        </div>
