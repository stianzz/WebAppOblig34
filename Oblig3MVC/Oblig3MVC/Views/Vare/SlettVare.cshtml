        <dt>
            @Html.DisplayNameFor(model => model.VareId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VareId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Navn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Navn)
